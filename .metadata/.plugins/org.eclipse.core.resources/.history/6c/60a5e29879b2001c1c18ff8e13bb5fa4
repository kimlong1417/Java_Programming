    panel3.setLayout(gl);
    gbc.anchor = GridBagConstraints.CENTER;
    gbc.fill = GridBagConstraints.NONE;
    gl.setConstraints(bu,gbc);
    panel3.add(bu);
    getContentPane().add(panel);
 
    panel.add(panel1, BorderLayout.NORTH);
    panel.add(panel2, BorderLayout.CENTER);
    panel.add(panel3, BorderLayout.SOUTH);
    try
    {
    a = tf11.getText();
    b = tf12.getText();
    c = tf13.getText();
    d = tf14.getText();
    e = tf15.getText();
    fg = tf16.getText();
    g = tf17.getText();
    h = tf18.getText();
    i = tf19.getText();
    j = tf20.getText();
     
    }
   catch(NumberFormatException nfe)
    {
      JOptionPane.showMessageDialog(this,"will not allow null values","Invalid number format",
                   JOptionPane.ERROR_MESSAGE);
    }
 
  }
   
  public void actionPerformed(ActionEvent evt)
  {
    String sr = evt.getActionCommand();
    if(sr.equals("ADD"))
     {
        
       total = total + Integer.parseInt(a) + Integer.parseInt(b) + Integer.parseInt(c)
                           + Integer.parseInt(d) + Integer.parseInt(e) + Integer.parseInt(fg)
                           + Integer.parseInt(g) + Integer.parseInt(h) + Integer.parseInt(i)
                           + Integer.parseInt(j);
    String dis = "The total expenditure for the employees is " + total;
    disdia.dp.setText(dis);
        
               
       disdia.setSize(300,300);
       disdia.setVisible(true);
     }
   }
 
   //public static void main(String[]args)
   //{
     //CalcDialog cd = new CalcDialog(frame,"Calculate Salaries", true);
   //}
}
 
     
 
      
Child (second JDialog)
 
package table_gui;
 
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
 
class DisDialog extends CalcDialog implements ActionListener
{
  JLabel dp;
  CalcDialog td;
  JButton b;
  DisDialog(JDialog parentt, String title, boolean modal)
  {
    super(parentt,title,modal);
    td = (CalcDialog)parentt;
    JPanel panel = new JPanel();
    panel.setLayout(new BorderLayout(10,10));
    setBackground(Color.green);
    dp = new JLabel(" ");
    panel.add(dp,BorderLayout.CENTER);
    b = new JButton("OK");
    b.addActionListener(this);
    getContentPane().add(panel);
    panel.add(b,BorderLayout.SOUTH);
  }
 
  public void actionPerformed(ActionEvent evt)
  {
     String sk = evt.getActionCommand();
     if(sk.equals("OK"))
       System.exit(0);
  }
}