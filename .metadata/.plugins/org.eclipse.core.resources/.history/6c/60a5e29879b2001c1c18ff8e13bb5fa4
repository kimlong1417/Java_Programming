    panel2.add(tf13);
    panel2.add(lab5);
    panel2.add(tf4);
    panel2.add(lab14);
    panel2.add(tf14);
    panel2.add(lab6);
    panel2.add(tf5);
    panel2.add(lab15);
    panel2.add(tf15);
