    lab18 = new JLabel("Salary");
    lab19 = new JLabel("Salary");
    lab20 = new JLabel("Salary");
    tf11 = new JTextField("0",20);
    tf12 = new JTextField("0",20);
    tf13 = new JTextField("0",20);
    tf14 = new JTextField("0",20);
    tf15 = new JTextField("0",20);
    tf16 = new JTextField("0",20);
    tf17 = new JTextField("0",20);
    tf18 = new JTextField("0",20);
    tf19 = new JTextField("0",20);
    tf20 = new JTextField("0",20);
    panel2.add(lab2);
    panel2.add(tf1);
    panel2.add(lab11);
    panel2.add(tf11);
    panel2.add(lab3);
    panel2.add(tf2);
    panel2.add(lab12);
    panel2.add(tf12);
    panel2.add(lab4);
    panel2.add(tf3);
