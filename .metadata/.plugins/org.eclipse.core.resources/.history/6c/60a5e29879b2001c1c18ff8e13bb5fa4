package ex.my;
 
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
 
class CalcDialog extends JDialog implements ActionListener
{
  //Salexpen saFrame;
   
  JLabel lab1,lab2,lab3,lab4,lab5,lab6,lab7,lab8,lab9,lab10,lab00;
 
  JTextField tf1,tf2,tf3,tf4,tf5,tf6,tf7,tf8,tf9,tf10;
 
  JLabel lab11,lab12,lab13,lab14,lab15,lab16,lab17,lab18,lab19,lab20;
 
  JTextField tf11,tf12,tf13,tf14,tf15,tf16,tf17,tf18,tf19,tf20;
 
  JButton bu;
  GridBagLayout gl;
  GridBagConstraints gbc;
  int total = 0;
  DisDialog disdia;
  String a, b, c, d, e, fg, g, h, i, j;
  CalcDialog(JFrame parent, String title, boolean modal)
  {
    super(parent, title, modal);
    gl = new GridBagLayout();
    gbc = new GridBagConstraints();
    //saFrame = (Salexpen)parent;
    JPanel panel = new JPanel();
    panel.setLayout(new BorderLayout());
    JPanel panel1 = new JPanel();
    panel1.setLayout(new BorderLayout());
    lab1 = new JLabel("Monthly Expenditure Calculation Page");
    Font f = new Font("Helvetica",Font.BOLD + Font.ITALIC, 18);
    lab1.setFont(f);
    panel1.add(lab1,BorderLayout.NORTH);
    JPanel panel2 = new JPanel();
    panel2.setLayout(new GridLayout(10,4,10,10));
    disdia = new DisDialog(this,"Total on expenditures", true);
 
    lab2 = new JLabel("Employee 1");
    lab3 = new JLabel("Employee 2");
    lab4 = new JLabel("Employee 3");
    lab5 = new JLabel("Employee 4");
    lab6 = new JLabel("Employee 5");
    lab7 = new JLabel("Employee 6");
