  class Blistener implements ActionListener
  {
     public void actionPerformed(ActionEvent evt)
     {
        String sr = textPass.getText();
        JButton button = (JButton)evt.getSource();
        if(sr.equals("tebiscosal"))
         {
           //if(sr == button)
            //{
             
              td.setSize(600,600);
              td.setVisible(true);
            //}
 
         }
   
       else
 
           td.setVisible(false);
 
     }
   }
}
         
 
